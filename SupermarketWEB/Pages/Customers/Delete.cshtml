@page
@model SupermarketWEB.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Document Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Document_Number)
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.First_Name)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Last_Name)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Address)
        </dd>
        <dt class="col-sm-2">
            Birth Day
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Birth_Day)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Phone_Number)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Customer.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
