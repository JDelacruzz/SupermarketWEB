@page
@model SupermarketWEB.Pages.PayModels.EditModel
@{
    ViewData["Title"] = "Editar Método de Pago";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Editar Método de Pago</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Detalles del Método de Pago</h4>
                    <hr />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="PayMode.Id" />
                        <div class="form-group mb-3">
                            <label asp-for="PayMode.Name" class="form-label">Nombre del Método de Pago</label>
                            <input asp-for="PayMode.Name" class="form-control" />
                            <span asp-validation-for="PayMode.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PayMode.Observation" class="form-label">Observación</label>
                            <input asp-for="PayMode.Observation" class="form-control" />
                            <span asp-validation-for="PayMode.Observation" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success">
                                Guardar
                            </button>
                            <a asp-page="Index" class="btn btn-primary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
