@page
@model SupermarketWEB.Pages.PayModels.EditModel
@{
    ViewData["Title"] = "Editar Método de Pago";
}

<h1 class="text-center my-4">Editar Método de Pago</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="PayMode.Id" />

                    <div class="form-group mb-3">
                        <label asp-for="PayMode.Name" class="form-label">Nombre del Método de Pago</label>
                        <input asp-for="PayMode.Name" class="form-control" />
                        <span asp-validation-for="PayMode.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PayMode.Observation" class="form-label">Observación</label>
                        <input asp-for="PayMode.Observation" class="form-control" />
                        <span asp-validation-for="PayMode.Observation" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a asp-page="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
