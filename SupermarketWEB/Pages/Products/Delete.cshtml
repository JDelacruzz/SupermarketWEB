@page
@model SupermarketWEB.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">Eliminar Producto</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center">¿Está seguro de que desea eliminar este producto?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Nombre
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Product.Name
                        </dd>
                        <dt class="col-sm-2">
                            Precio
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Product.Price
                        </dd>
                        <dt class="col-sm-2">
                            Stock
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Product.Stock
                        </dd>
                        <dt class="col-sm-2">
                            Categoría
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Product.Category?.Name
                        </dd>
                    </dl>
                    <form method="post">
                        <input type="hidden" asp-for="Product.Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-page="Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
