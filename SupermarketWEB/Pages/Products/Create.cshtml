@page
@model SupermarketWEB.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Crear Producto</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Name" class="form-label">Nombre del Producto</label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Price" class="form-label">Precio</label>
                            <input asp-for="Input.Price" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Stock" class="form-label">Stock</label>
                            <input asp-for="Input.Stock" class="form-control" type="number" min="0" />
                            <span asp-validation-for="Input.Stock" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.CategoryId" class="form-label">Categoría</label>
                            <select asp-for="Input.CategoryId" asp-items="Model.Categories" class="form-select">
                                <option value="">-- Seleccione una categoría --</option>
                            </select>
                            <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
