@page
@model SupermarketWEB.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h1 class="text-center font-weight-bold">Categorías</h1>
    <p class="text-center">
        <a asp-page="Create" class="btn btn-success">Crear nuevo</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Categories[0].Name)
                    </th>
                    <th class="font-weight-bold">
                        @Html.DisplayNameFor(model => model.Categories[0].Description)
                    </th>
                    <th class="font-weight-bold">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
